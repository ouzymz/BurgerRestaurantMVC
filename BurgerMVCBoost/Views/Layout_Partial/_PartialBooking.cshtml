@model BurgerMVCBoost.ViewModel.BookingVM
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Rezervasyon Oluştur
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form asp-action="Book">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Name" class="form-control" placeholder="Adınız"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon Numaranız"/>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Mail" class="form-control" placeholder="Mailiniz" />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PersonCount" class="control-label">Kişi Sayısı</label>
                            <input asp-for="PersonCount" class="form-control" placeholder="Kişi Sayısı"/>
                            <span asp-validation-for="PersonCount" class="text-danger"></span>
                        </div>   
                        <div class="form-group">
                            <label asp-for="BookDate" class="control-label">Rezervasyon Tarihi</label>
                            <input asp-for="BookDate" class="form-control" />
                            <span asp-validation-for="BookDate" class="text-danger"></span>
                        </div>
                        <div class="btn-box">
                            <button type="submit">Oluştur</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <iframe id="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12046.372722325967!2d29.043541846016563!3d40.990388235308686!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac790b17ba89d%3A0xd2d24ea0437a7ee2!2zS2FkxLFrw7Z5L8Swc3RhbmJ1bA!5e0!3m2!1str!2str!4v1646827091657!5m2!1str!2str" width="500px;" height="350px;" style="border: 0" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</section>