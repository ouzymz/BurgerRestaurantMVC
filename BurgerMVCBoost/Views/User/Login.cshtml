@model BurgerMVC.ViewModel.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_BurgerLayout2.cshtml";
}
@*HOCAYA SORULACAK FARKLI BİR VİEWMODEL KULLANMAK DAHA MI İYİ OLUR*@
<style>
    .gradient-custom {
        background-color: #fff
    }

    .color {
        color: darkorange; /*Change text color*/
    }
</style>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white h-100" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Giriş Yap</h2>
                            <p class="text-white-50 mb-5">Lütfen istenilen bilgileri doldurunuz</p>
                            <form asp-action="Login" asp-controller="User" method="post">
                                <div asp-validation-summary="ModelOnly" class="color"></div>
                                <div class="form-outline form-white mb-4">
                                    <label asp-for="UserName" class="control-label"></label>
                                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adı" />
                                    <span asp-validation-for="UserName" class="color"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Şifre" />
                                    <span asp-validation-for="Password" class="color"></span>
                                </div>
                                <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="/User/ForgotPassword">Şifremi Unuttum</a></p>
                                <div class="form-group">
                                    <input class="btn btn-outline-warning btn-lg px-5" value="Giriş Yap" type="submit" />
                                </div>
                                <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                    <a href="/User/FacebookLogin" class="text-white"><i class="fa fa-facebook-f fa-lg"></i></a>
                                    <i class="fa-lg mx-4 px-2"></i>
                                    <a href="/User/GoogleLogin" class="text-white"><i class="fa fa-google fa-lg"></i></a>
                                </div>
                            </form>
                        </div>
                        <div>
                            <a href="/User/Register" class="text-white-50 fw-bold"> Üye değil misin? Hemen Kayıt Ol!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

