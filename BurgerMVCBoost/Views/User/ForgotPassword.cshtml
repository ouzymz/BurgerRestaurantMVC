@model BurgerMVCBoost.ViewModel.ForgotPasswordVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_BurgerLayout2.cshtml";
}
<style>
    .gradient-custom {
        background-color: #fff
    }

    .color {
        color: darkorange; /*Change text color*/
    }
</style>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white h-100" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Şifremi Unuttum</h2>
                            <p class="text-white-50 mb-5">Lütfen istenilen bilgileri doldurunuz</p>
                            <form asp-action="ForgotPassword" asp-controller="User" method="post">
                                <div asp-validation-summary="ModelOnly" class="color"></div>
                                <div class="form-outline form-white mb-4">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Email adresiniz" />
                                    <span asp-validation-for="Email" class="color"></span>
                                </div>
                                <div class="form-group">
                                    <input class="btn btn-outline-warning btn-lg px-5" value="Şifremi Sıfırla" type="submit" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>